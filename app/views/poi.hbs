{{> mainmenu _id="report" }}

<section class="ui raised segment">
    <div class="ui grid">
        <div class="ui eight wide column">
            <div class="ui stacked fluid form segment">
                <h3 class="ui header">{{name}}</h3>
                <div>
                    <div class="field">
                        <label>Name</label> <input class="ui transparent input" value="{{name}}" type="text" name="name" readonly>
                    </div>
                    <div class="field">
                        <label>Description</label> <input class="ui transparent input" value="{{description}}" type="text" name="description" readonly>
                    </div>
                </div>
                <table class="ui celled table segment">
                    <thead>
                        <tr>
                            <th>Categories</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each categories}}
                            <tr>
                                <td>
                                    <div>{{this}}</div>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
                <br>
                <form action="/updatepoi/{{_id}}" method="GET">
                    <button class="ui blue submit button">Edit POI</button>
                </form>
            </div>
        </div>
        <aside class="ui eight wide column">
            <img src="{{image}}" class="ui huge image">
        </aside>
    </div>
</section>