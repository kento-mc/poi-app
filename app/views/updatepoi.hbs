{{> mainmenu _id="report" }}

<section class="ui raised segment">
    <div class="ui grid">
        <div class="ui eight wide column">
            <div class="ui stacked fluid form segment">
                <form action="/updatepoi/{{poi._id}}" method="POST">
                    <h3 class="ui header">{{poi.name}}: Update Info</h3>
                    <div class="field">
                        <label>Name</label> <input value="{{poi.name}}" type="text" name="name">
                    </div>
                    <div class="field">
                        <label>Description</label> <input value="{{poi.description}}" type="text" name="description">
                    </div>
                    <div class="two fields">
                        <div class="field">
                            <label>Latitude</label>
                            <input value="{{poi.location.lat}}" type="number" step="0.000001" name="lat">
                        </div>
                        <div class="field">
                            <label>Longitude</label>
                            <input value="{{poi.location.lon}}" type="number" step="0.000001" name="lon">
                        </div>
                    </div>
                    {{#if user.isAdmin}}
                        <div class="field">
                            <label>Contributor</label> <input value="{{poi.contributor.firstName}} {{poi.contributor.lastName}}" type="text" name="contributor">
                        </div>
                    {{/if}}
                    <div class="field">
                        <label>Image URL</label> <input value="{{poi.imageURL}}" type="text" name="imageURL">
                    </div>
                    <br>
                    <div class="field">
                        <label>Categories</label>
                        <table class="ui celled table segment">
                            <thead>
                            </thead>
                            <tbody>
                            {{#each poi.categories}}
                                <tr>
                                    <td>
                                        <input value="{{this}}" type="text" name="categories">
                                    </td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <button class="ui blue submit button">Save Changes</button>
                    <button class="ui red submit button" formaction="/deletepoi/{{poi._id}}">Delete POI</button>
                </form>
            </div>
        </div>
        <aside class="ui eight wide column">
            <img src="{{poi.imageURL}}" class="ui huge image">
        </aside>
    </div>
</section>