<div class="ui stacked segment">
    <form action="/addpoi" method="POST" enctype="multipart/form-data">
        <h3 class="ui header">Add a new Point of Interest</h3>
        <div class="field"><label>Name</label> <input placeholder="point of interest" type="text" name="name" /></div>
        <div class="field"><label>Description</label> <input placeholder="description" type="text" name="description" /></div>
        <div class="two fields">
            <div class="field">
                <label>Latitude</label>
                <input placeholder="0.000000" type="number" step="0.000001" name="lat" />
            </div>
            <div class="field">
                <label>Longitude</label>
                <input placeholder="0.000000" type="number" step="0.000001" name="lon" />
            </div>
        </div>
        <div class="field">
            <label class="field">Categories</label>
            <select class="ui fluid dropdown" name="categories" multiple="" >
                {{> categories }}
            </select>
        </div>
        <!-- Used the following to work out the filename display functionality:
        https://stackoverflow.com/questions/41542845/how-to-display-file-name-for-custom-styled-input-file-using-jquery
        -->
        <div>
            <label for="file-upload" class="ui blue button">
                <i class="image icon"></i>
                Upload Image
            </label>
            <input id="file-upload" type="file" name="image" style="display:none">
        </div>
        <br>
        <button class="ui blue submit button">Submit</button>
    </form>
</div>